<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="76dp">

    <CheckBox
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/checkbox"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="2.6"
        android:id="@+id/paketimage"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:src="@color/colorPrimaryDark"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:paddingLeft="5dp"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:textColor="@android:color/black"
            android:textSize="19dp"
            android:id="@+id/destination"
            android:layout_height="0dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="3.6"
            android:id="@+id/pickupDate"
            android:layout_height="0dp" />
    </LinearLayout>
    <GridLayout
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:id="@+id/imagegrid"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_height="wrap_content"
            android:src="@drawable/ic_opacity_black_24dp"
            android:layout_gravity="top|left"
            android:id="@+id/liquid"/>

        <ImageView
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm_add_black_24dp"
            android:layout_gravity="top|right"
            android:id="@+id/perishable"/>

        <ImageView
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fiber_new_black_24dp"
            android:layout_gravity="bottom|left"
            android:id="@+id/heavy"/>

        <ImageView
            android:layout_height="wrap_content"
            android:src="@drawable/ic_track_changes_black_24dp"
            android:layout_gravity="bottom|right"
            android:id="@+id/fragile"/>
    </GridLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/mapicon"
        android:background="#50AAAAAA"
        android:src="@android:drawable/ic_menu_mapmode"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_height="match_parent" />
    <!--<ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/mapicon"
        android:src="@android:drawable/ic_menu_mapmode"
        android:layout_height="match_parent" />-->
</LinearLayout>